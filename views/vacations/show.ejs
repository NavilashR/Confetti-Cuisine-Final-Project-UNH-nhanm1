<h1 class="center">Course Data for
  <%= vacation.title %>
</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <td>
      <%= vacation.title %>
    </td>
  </tr>
  <tr>
    <th>Description</th>
    <td>
      <%= vacation.description%>
    </td>
  </tr>
  <tr>
    <th>Max Travellers</th>
    <td>
      <%= vacation.maxTravelers%>
    </td>
  </tr>
  <tr>
    <th>Cost</th>
    <td>$
      <%= vacation.cost%>
    </td>
  </tr>
</table>


<div>
  <a class="button" href="<%=`/vacations/${vacation._id}/edit`%>">
    Edit vacation Details
  </a>
</div>
<div>
  <a class="button" href="<%= `/vacations/${vacation._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
</div>
<div>
  <a class="button" href="/vacations">View all vacations</a>
</div>
